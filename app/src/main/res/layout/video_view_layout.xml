    android:id="@+id/video_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoComponent">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video"
